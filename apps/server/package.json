{
  "name": "@least-count/server",
  "version": "1.0.0",
  "description": "Least Count game server with Socket.io",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "clean": "rimraf dist",
    "test-bots": "tsx src/bot/GameTester.ts",
    "test-quick": "tsx src/bot/GameTester.ts -- --quick",
    "test-medium": "tsx src/bot/GameTester.ts -- --medium",
    "test-full": "tsx src/bot/GameTester.ts -- --full"
  },
  "dependencies": {
    "@least-count/shared": "file:../../packages/shared",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.8.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "rimraf": "^5.0.5",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2"
  }
}
